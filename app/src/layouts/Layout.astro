---
// src/layouts/Layout.astro
import "bootstrap/dist/css/bootstrap.min.css";
import background from '../assets/background.svg';
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link href="https://fonts.maateen.me/solaiman-lipi/font.css" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	<style>
		html,
	body {
		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;
		box-sizing: border-box;
	}
		#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(100px);
	}

	</style>
	</head>
	<body>
		<main class="row" style="width:100%;height:100%;margin:0;padding:0;">
			<img id="background" src={background.src} alt="" fetchpriority="high">
			<section class="col-md-8" id="left" style="height: 100%;">
				<slot name="left"/>
			</section>
			<section class="col-md-4"id='right' style="height: 100%;background-color:rgba(222, 246, 252,0.8)">
				<slot name="right"/>
			</section>
		</main>
	</body>
</html>

